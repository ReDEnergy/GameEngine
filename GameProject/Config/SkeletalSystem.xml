<!-- 
	Skeleton
	------------
	Bones
		- size
	Joint
		- between 2 actors (bones)
		- constraints
	Body parts
		- size (related to the corresponding bones)
		- weight (proportional system based on body parts volumes?)
-->

<skelet>
	<joints>
		<!-- Root -->
		<joint>
			<name>Pelvis</name>
			<pos>0 1.0 0</pos>
			<kinectID>0</kinectID>
		</joint>	
		<!-- Spine -->
		<!-- Kinect sensor has supports for only 1 intermediary spine bone / 
			Solution: Interpolation if needed by a skeletal animated mesh
		<joint>
			<name>SpinBase</name>
			<constraints>
				<ox>-15 45</ox>
				<oy>-90 90</oy>
				<oz>-45 45</oz>
			</constraints>
			<pos>0 1.2 0</pos>
			<parent>Pelvis</parent>
			<kinectID>1</kinectID>
		</joint>	
		-->
		<joint>
			<name>SpinMid</name>
			<constraints>
				<ox>-15 45</ox>
				<oy>-90 90</oy>
				<oz>-45 45</oz>
			</constraints>
			<pos>0 1.35 0</pos>
			<parent>Pelvis</parent>
			<kinectID>1</kinectID>
		</joint>								
		<joint>
			<name>SpineShoulder</name>
			<constraints>
				<ox>-15 45</ox>
				<oy>-90 90</oy>
				<oz>-45 45</oz>
			</constraints>
			<pos>0 1.5 0</pos>
			<parent>SpinMid</parent>
			<kinectID>20</kinectID>
		</joint>
		<!-- Head -->
