<?xml version="1.0" encoding="UTF-8"?>
<!-- Shaders -->
<!-- Template
<shader>
	name=""
	<path></path>
	<vertex></vertex>
	<fragment></fragment>
	<geometry></geometry>
	<compute></compute>
	<tess_eval></tess_eval>
	<tess_control></tess_control>
</shader>
-->
<shaders>
	<shader name="simple">
		<vertex>MVP.Texture.VS</vertex>
		<fragment>Simple.FS</fragment>
	</shader>

	<shader name="debug">
		<vertex>Model.Texture.VS</vertex>
		<fragment>Debug.FS</fragment>
	</shader>

	<shader name="default">
		<vertex>MVP.Texture.VS</vertex>
		<fragment>Default.FS</fragment>
	</shader>

	<shader name="font">
		<vertex>Font/Default.VS</vertex>
		<fragment>Font/Default.FS</fragment>
	</shader>

	<shader name="ssao">
		<vertex>Screen.VS</vertex>
		<fragment>SSAO.FS</fragment>
	</shader>
	<shader name="ssaoBlur">
		<compute>Compute/Blur.CS</compute>
	</shader>

	<shader name="blur">
		<vertex>Screen.VS</vertex>
		<fragment>Filters/Blur.FS</fragment>
	</shader>

	<shader name="composition">
		<vertex>Screen.VS</vertex>
		<fragment>Composition.FS</fragment>
	</shader>

	<shader name="shadow">
		<vertex>MVP.Texture.VS</vertex>
		<fragment>Depth.FS</fragment>
	</shader>

	<shader name="CSM">
		<vertex>Shadows/CSM.VS</vertex>
		<fragment>Shadows/CSM.FS</fragment>
	</shader>	

	<shader name="VSM">
		<vertex>Shadows/CSM.VS</vertex>
		<fragment>Shadows/VSM.FS</fragment>
	</shader>	

	<shader name="ShadowMap">
		<compute>Shadows/Compute/ShadowMap.CS</compute>
	</shader>	

	<shader name="CSMShadowMap">
		<compute>Shadows/Compute/CSMShadowMap.CS</compute>
	</shader>	

	<shader name="CSMClear">
		<compute>Shadows/Compute/CSMClear.CS</compute>
	</shader>	

	<shader name="ColorSurface">
		<compute>Compute/ColorSurface.CS</compute>
	</shader>	

	<shader name="deferred">
		<vertex>MVP.VS</vertex>
		<fragment>Deferred.Light.FS</fragment>
	</shader>	

	<shader name="rendertargets">
		<vertex>R2T.VS</vertex>
		<fragment>R2T.FS</fragment>
	</shader>

	<shader name="r2tskinning">
		<vertex>Skinning/R2T.VS</vertex>
		<fragment>R2T.FS</fragment>
	</shader>	

	<shader name="SoVInput">
		<compute>SoV/SoVInput.CS</compute>
	</shader>
	
	<!-- Prototyping -->
	<shader name="ToFSimulation">
		<compute>Prototyping/ToFSimulation.CS</compute>
	</shader>
	 
	<!-- Kinect Processing Shaders -->
	<shader name="particle">
		<vertex>Particles/Particle.VS</vertex>
		<geometry>Particles/Particle.GS</geometry>
		<fragment>Particles/Particle.FS</fragment>
	</shader>

	<shader name="KinectCompute">
		<compute>Kinect/Compute/Depth.CS</compute>
	</shader>

	<shader name="KinectMotionParticle">
		<vertex>Kinect/Particle/Particle.VS</vertex>
		<geometry>Kinect/Particle/Particle.GS</geometry>
		<fragment>Kinect/Particle/Particle.FS</fragment>
	</shader>

	<shader name="KinectMotionInstanced">
		<vertex>Kinect/Instanced/Instanced.VS</vertex>
		<fragment>Kinect/Instanced/Instanced.FS</fragment>
	</shader>	
</shaders>
